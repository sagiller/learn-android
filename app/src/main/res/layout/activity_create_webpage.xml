<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/abc_action_bar_default_height_material"
      android:background="?attr/colorPrimary"
      android:colorControlNormal="@color/white"
      />

  <ScrollView android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/toolbar">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <LinearLayout
          android:id="@+id/formContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="56dp"
          android:orientation="vertical"
          android:background="@color/primary"
          android:paddingRight="24dp"
          android:paddingLeft="72dp"
          android:clipToPadding="false"
          android:elevation="4dp"
          >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textCursorDrawable="@drawable/text_cursor"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/accent"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Url"
            android:layout_marginTop="@dimen/space_login_form"
            android:textCursorDrawable="@drawable/text_cursor"
            android:gravity="center_vertical"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/accent"
            app:met_iconPadding="4dp"
            app:met_iconLeft="@drawable/ic_search"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <com.sagiller.learn.func.web.categorylayout.WebPageCategoryLayout
              android:id="@+id/category"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/starButton"
              android:layout_alignBottom="@+id/senderMail"
              android:visibility="gone"
              android:background="@drawable/webpage_category_layout_background"
              android:orientation="horizontal"
              />


        </LinearLayout>
      </LinearLayout>



      <com.melnykov.fab.FloatingActionButton
          xmlns:fab="http://schemas.android.com/apk/res-auto"
          android:id="@+id/send"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:layout_marginBottom="16dp"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/formContainer"
          android:layout_marginTop="-26dp"
          android:src="@drawable/ic_send"
          android:transitionName="@string/shared_add_webpage"
          android:textColor="@color/white"
          fab:fab_colorNormal="@color/accent"
          fab:fab_colorPressed="@color/accent_dark"
          fab:fab_colorRipple="@color/accent"
          />


      <EditText
          android:id="@+id/description"
          android:inputType="textMultiLine"
          android:gravity="top|left"
          android:layout_marginLeft="@dimen/write_edit_box_margin_left"
          android:layout_marginRight="16dp"
          android:layout_below="@+id/send"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:scrollbars="vertical"
          android:hint="Description"
          android:textColor="@color/primary_text"
          android:background="@null"
          />

    </RelativeLayout>
  </ScrollView>


  <FrameLayout
      android:id="@+id/loadingOverlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#A0424242"
      android:visibility="gone">

      <include layout="@layout/view_loading" />

  </FrameLayout>

</RelativeLayout>