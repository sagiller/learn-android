<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sagiller.learn" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".App">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".func.login.LoginActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".func.article.ArticleActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="">
        </activity>
        <activity
            android:name=".func.web.webpage.WebpagesActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="">
        </activity>
        <activity
            android:name=".func.web.webview.WebViewActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="">
        </activity>
        <activity
            android:name=".func.web.webpage.create.CreateWebpageActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="">
        </activity>

    </application>

</manifest>